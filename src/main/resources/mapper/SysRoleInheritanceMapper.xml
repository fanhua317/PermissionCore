<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.permacore.iam.mapper.SysRoleInheritanceMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.permacore.iam.domain.entity.SysRoleInheritanceEntity">
        <id column="id" property="id" />
        <result column="ancestor_id" property="ancestorId" />
        <result column="descendant_id" property="descendantId" />
        <result column="depth" property="depth" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, ancestor_id, descendant_id, depth
    </sql>

    <select id="selectAncestorIdsByDescendantId" resultType="java.lang.Long">
        SELECT ancestor_id FROM sys_role_inheritance WHERE descendant_id = #{descendantId}
    </select>

    <select id="selectAncestorIdsByDescendantIds" resultType="java.lang.Long">
        WITH RECURSIVE role_tree AS (
            SELECT ancestor_id, descendant_id
            FROM sys_role_inheritance
            WHERE descendant_id IN
            <foreach collection="descendantIds" item="id" open="(" separator="," close=")">
                #{id}
            </foreach>
            UNION ALL
            SELECT sri.ancestor_id, sri.descendant_id
            FROM sys_role_inheritance sri
            INNER JOIN role_tree rt ON sri.descendant_id = rt.ancestor_id
        )
        SELECT DISTINCT ancestor_id FROM role_tree
    </select>

</mapper>
